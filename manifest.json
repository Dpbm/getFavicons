{
  "manifest_version": 2,
  "name": "GetFavicons",
  "version": "1.2",
  "description": "Get favicons from websites",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_title": "Favicons list",
    "default_popup": "index.html"
  },
  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png",
    "128": "assets/icon-128.png",
    "144": "assets/icon-144.png"
  },
  "permissions": [
    "<all_urls>",
    "tabs"
  ]
}